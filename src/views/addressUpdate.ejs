<!DOCTYPE html>
<html lang="pt-br">
<head>
    <title>Atualizar Endereço</title>
    <%- include('./parts/head'); %>
</head>
<body>
    <%- include('./parts/nav'); %>
<main>
    <section class="box-search">
    <div class="box-header">
        <img src="img/box.png" alt="" class="img-box"><br>
        <h1 class="titulo">Atualizar seu Endereço</h1>
    </div>
         <form method="post" action="/updateUser/?id=<%= user._id %>">
            <span>Endereço:</span>
            <input type="text" name="address" placeholder="Rua, número - Bairro" value="<%= user.address %>" required>
            <span>Cep: </span>
            <input type="text" name="cep" value="<%= user.cep %>" required>
            <span>Cidade:</span>
            <input type="text" name="city" value="<%= user.city %>" required>
            <span>Estado: </span>
            <select name="uf" required>
                <option hidden>Selecione o estado</option>
                <option value="AC" <% if(user.uf == 'AC') { %> <%= 'selected' %> <% } %> >Acre</option>
	            <option value="AL" <% if(user.uf == 'AL') { %> <%= 'selected' %> <% } %> >Alagoas</option>
	            <option value="AP" <% if(user.uf == 'AP') { %> <%= 'selected' %> <% } %> >Amapá</option>
	            <option value="AM" <% if(user.uf == 'AM') { %> <%= 'selected' %> <% } %> >Amazonas</option>
	            <option value="BA" <% if(user.uf == 'BA') { %> <%= 'selected' %> <% } %> >Bahia</option>
	            <option value="CE" <% if(user.uf == 'CE') { %> <%= 'selected' %> <% } %> >Ceará</option>
	            <option value="DF" <% if(user.uf == 'DF') { %> <%= 'selected' %> <% } %> >Distrito Federal</option>
	            <option value="ES" <% if(user.uf == 'ES') { %> <%= 'selected' %> <% } %> >Espírito Santo</option>
	            <option value="GO" <% if(user.uf == 'GO') { %> <%= 'selected' %> <% } %> >Goiás</option>
	            <option value="MA" <% if(user.uf == 'MA') { %> <%= 'selected' %> <% } %> >Maranhão</option>
	            <option value="MT" <% if(user.uf == 'MT') { %> <%= 'selected' %> <% } %> >Mato Grosso</option>
	            <option value="MS" <% if(user.uf == 'MS') { %> <%= 'selected' %> <% } %> >Mato Grosso do Sul</option>
	            <option value="MG" <% if(user.uf == 'MG') { %> <%= 'selected' %> <% } %>>Minas Gerais</option>
	            <option value="PA" <% if(user.uf == 'PA') { %> <%= 'selected' %> <% } %> >Pará</option>
	            <option value="PB" <% if(user.uf == 'PB') { %> <%= 'selected' %> <% } %> >Paraíba</option>
	            <option value="PR" <% if(user.uf == 'PR') { %> <%= 'selected' %> <% } %> >Paraná</option>
	            <option value="PE" <% if(user.uf == 'PE') { %> <%= 'selected' %> <% } %> >Pernambuco</option>
	            <option value="PI" <% if(user.uf == 'PI') { %> <%= 'selected' %> <% } %> >Piauí</option>
	            <option value="RJ" <% if(user.uf == 'RJ') { %> <%= 'selected' %> <% } %> >Rio de Janeiro</option>
	            <option value="RN" <% if(user.uf == 'RN') { %> <%= 'selected' %> <% } %> >Rio Grande do Norte</option>
	            <option value="RS" <% if(user.uf == 'RS') { %> <%= 'selected' %> <% } %> >Rio Grande do Sul</option>
	            <option value="RO" <% if(user.uf == 'RO') { %> <%= 'selected' %> <% } %> >Rondônia</option>
	            <option value="RR" <% if(user.uf == 'RR') { %> <%= 'selected' %> <% } %> >Roraima</option>
	            <option value="SC" <% if(user.uf == 'SC') { %> <%= 'selected' %> <% } %> >Santa Catarina</option>
	            <option value="SP" <% if(user.uf == 'SP') { %> <%= 'selected' %> <% } %> >São Paulo</option>
	            <option value="SE" <% if(user.uf == 'SE') { %> <%= 'selected' %> <% } %> >Sergipe</option>
	            <option value="TO" <% if(user.uf == 'TO') { %> <%= 'selected' %> <% } %> >Tocantins</option>
            </select>
            <button type="submit"> Atualizar</button>
        </form>
        <div class="box-header">
        <% if(typeof(error) != "undefined"){ %>
            <span class="error"><%= error %></span>
        <% } %>
        </div>
    </section>
</main>
<script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
<script src="js/script.js"></script>
</body>
</html>